<%= link_to " Back", :back, :class => "btn btn-primary btn-sm bi bi-box-arrow-left", :style => "margin-top: .7em; font-size: 1.3rem" %>

<div class="card shadow">
    <div class="card-header">
        <h2 class="text-dark my-3">Following:</h2>
    </div>

    <div class="card-body">
        <div class="list-group list-group-flush">
            <% users_followed = @user.follows.includes(:follows) %>
            <% if users_followed.length < 1 %>
                <p>You do not follow anyone...</p>
            <% else %>
                <% users_followed.each do |friendship| %>
                    <%= render( :partial => "users/card", :locals => { :user => friendship.follows } ) %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>