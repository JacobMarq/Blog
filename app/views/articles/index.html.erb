<%# The Blog-Spot currently has < % = Article.public_count % > articles and counting! #%>

<div class="row">
    <% @articles[0..2].each do |article| %>
        <div class="col-md">
            <div class="card" style="display: inline-block">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= article.title.capitalize %>
                    </h5>
                    <p class="card-text">
                        <%= article.body[0...15].capitalize + '...' %>
                    </p>
                    <%= link_to 'Read more...', article %>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        <%= 'last updated on ' + article.updated_at.to_s[6...10] + '-' + article.updated_at.to_s[0...4] %>
                    </small>
                </div>
            </div>
        </div>
    <% end %>
</div>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item disabled">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li class="page-item active" aria-current="page"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>

<div class="d-grid gap-2 col-6 mx-auto">
    <%= button_to "Create New Article", new_article_path,
                :method => :get,
                :class => "btn btn-primary btn-lg",
                :type => "button" %>
</div>
