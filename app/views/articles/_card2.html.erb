<div class="col-md-8 float-md-start">
    <% if article.cover.attached? %>
        <a href="/articles/<%= article.id %>">
            <img src="<%= url_for(article.cover) %>" class="d-block my-0 w-100 mw-100 rounded-3" style="aspect-ratio: 16/9">
        </a>
    <% else %>
        <p class="text-muted d-block h-100 w-100 text-center">No photo to load...</p>
    <% end %>
</div>
<div class="col-md-4 float-md-end pt-3 ps-3">
    <div class="pb-1 me-3 border-bottom">
        <a href="/articles/<%= article.id %>" class="fs-3 text-decoration-none fw-bolder title-link"><%= article.title.capitalize %></a>
    </div>
    <div class="d-flex my-3">
        <img src="" class="border border-dark rounded-circle" style="height: 40px; width: 40px; margin: 0; aspect-ratio: 2/2">
        <div class="col-10 ms-3 align-self-center">
            <p class="text-muted fs-6 mb-0">John Hernandez</p>
        </div>
    </div>
</div>