<%= link_to "Back", articles_path, :class => "btn btn-primary btn-sm" %>

<div>
    <h1> <%= @article.title.capitalize %> </h1>

    <ul>
        <li><%= link_to "Edit", edit_article_path(@article),
                        :class => "btn btn-primary btn-sm" %>
        </li>

        <li><%= link_to "Delete", article_path(@article),
                        :class => "btn btn-primary btn-sm btn-danger",
                        method: :delete,
                        data: { confirm: "Are you sure?" }%>
        </li>
    </ul>
</div>
<p> <%= @article.body.capitalize %> </p>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>