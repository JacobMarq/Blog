<div class="container-fluid">
    <nav class="navbar navbar-light bg-light navbar-expand-md">
        <%= link_to "The Blog-Spot", root_path, class: 'navbar-brand' %>
        <button type="button" class="navbar-toggler collapsed" data-bs-toggle="collapse" data-bs-target="#exploreBlog" aria-controls="exploreBlog" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse" id="exploreBlog">
            <ul class="navbar-nav nav">
                <li class="nav-item">
                    <a class="nav-link" href="/home/index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/articles">Articles</a>
                </li>
            </ul>
        </div>

        <% if user_signed_in? %>
            <div class="d-flex">
                <%= link_to "Account", current_user, class: 'btn' %>
                <%= button_to "Log out", destroy_user_session_path, method: :delete, class: 'btn' %>
            </div>
        <% else %>
            <div class="d-flex">
                <%= link_to "Sign up", new_user_registration_path, class: 'btn' %>
                <%= link_to "Log in", user_session_path, class: 'btn' %>
            </div>
        <% end %>
    </nav>
</div>